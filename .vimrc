set nocompatible
filetype indent on
syntax on
set mouse=a
set cmdheight=1
set number
set hidden
set wildmenu
set showcmd
set incsearch
set hlsearch
set backspace=indent,eol,start
set autoindent
set nostartofline
set ruler
set laststatus=2
set confirm
set visualbell
set t_vb=
set notimeout ttimeout ttimeoutlen=200
set pastetoggle=<F11>
set tabstop=8
set shiftwidth=4
set softtabstop=4
set expandtab
map Y y$
